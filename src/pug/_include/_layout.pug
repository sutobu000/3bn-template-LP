- var DOMAIN = "https://archive.sutobu000.com"
- var BASE_DOMAIN = "/"
- var DIR_IMG = BASE_DOMAIN + "img/"
- var DIR_IMG_CMN = BASE_DOMAIN + "img/common/"
- var DIR_CSS = BASE_DOMAIN + "css/"
- var DIR_JS = BASE_DOMAIN + "js/"

- var TWITTER_NAME = "@Twitterのユーザー名"

block vars

doctype html
html(lang='ja')
	head(prefix='og: http://ogp.me/ns# website: http://ogp.me/ns/website#')
		meta(charset='utf-8')
		title #{_title_str}
		//- Page Setting
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='description', content=_desc_str)
		meta(name='keywords', content=_keys_str)
		meta(property="og:title", content=_title_str)
		meta(property="og:type", content="website")
		meta(property="og:description", content=_desc_str)
		meta(property="og:url", content=DOMAIN + "/")
		meta(property="og:image", content=DOMAIN + DIR_IMG_CMN + "og_image.jpg")
		meta(name="twitter:card", content="summary_large_image")
		meta(name="twitter:site", content=TWITTER_NAME)
		meta(name='viewport', content='width=device-width,user-scalable=yes')
		meta(name='mobile-web-app-capable', content='yes')
		link(rel='apple-touch-icon', href=DOMAIN + "/apple-touch-icon.png")
		link(rel='shortcut icon', href=DOMAIN + '/favicon.ico')
		link(rel='stylesheet', href=DIR_CSS + "style.css")

		script(src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.6.1/gsap.min.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.6.1/ScrollToPlugin.min.js")

		block link

	body(id=_page_id)
		.wrapper
			header.header
				.header_inner
					.logo: a(href=`${BASE_DOMAIN}`): img(src="https://placehold.jp/200x40.png", alt="サイト名")
					button.navBtn(data-open=false)
						span 
						span 
						span 
					nav
						ul
							li: a(href="#section01"): span Section01
							li: a(href="#section02"): span Section02
							li: a(href="#section03"): span Section03
							li: a(href="#section04"): span Section04
							li.navContact: a(href="#contact"): span Contact

			main.main
				block body

				.pageTop(data-current=false)
					a(href="#"): span PAGE TOP

			footer.footer
				aside.sns
					dl
						dt Follow us
						dd: ul
							li: a(href="", target="_blank"): img(src="https://placehold.jp/40x40.png", alt="Twitter")
							li: a(href="", target="_blank"): img(src="https://placehold.jp/40x40.png", alt="Instagram")
					dl
						dt Share
						dd: ul
							li: a(href="", target="_blank"): img(src="https://placehold.jp/40x40.png", alt="Twitter")
							li: a(href="", target="_blank"): img(src="https://placehold.jp/40x40.png", alt="Facebook")
							li: a(href="", target="_blank"): img(src="https://placehold.jp/40x40.png", alt="Instagram")
				.copy: small &copy; 3BN

	//- 全体共通のjs
	script(src=DIR_JS + "index.js")
	block script
